@code {
    [Parameter]
    public int Id { get; set; }



    private string sizeActive = "4";
    private string colorActive = "1";
    private bool isClicked = false;
    private MediaAccount user ;


    protected override async Task OnInitializedAsync()
    {
        user = await _mediaAccountService.GetAccountById(Id);
        Console.WriteLine();
    }



    private void  ToggleTheme()
    {
        isClicked = true;
    }

    private void CloseModal()
    {
        isClicked = false ;
    }

    private async Task ChangeFontSize(int numberSize)
    {
        if(numberSize == 1)
        {
            sizeActive = "1";
        }
        else if(numberSize == 2)
        {
            sizeActive = "2";
        }
        else if (numberSize == 3)
        {
            sizeActive = "3";
        }
        else if (numberSize == 4)
        {
            sizeActive = "4";
        }
        else if (numberSize == 5)
        {
            sizeActive = "5";
        }
        await _jsRuntime.InvokeVoidAsync("window.changeSize", numberSize) ;
    }


    private async Task ChangeColor(int colorNumber)
    {
        if (colorNumber == 1)
        {
            colorActive = "1";
        }
        else if (colorNumber == 2)
        {
            colorActive = "2";
        }
        else if (colorNumber == 3)
        {
            colorActive = "3";
        }
        else if (colorNumber == 4)
        {
            colorActive = "4";
        }
        else if (colorNumber == 5)
        {
            colorActive = "5";
        }
        await _jsRuntime.InvokeVoidAsync("window.changeColor", colorNumber);
    }

    private async Task ChangeBackColor(int backColorNumber)
    {
        await _jsRuntime.InvokeVoidAsync("window.changeBackColor", backColorNumber);
    }

}
